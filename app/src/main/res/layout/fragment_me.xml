<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Mefragement">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/head_area"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/me_bac_img"
            />
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:src="@drawable/head"/>



    </FrameLayout>



    <RelativeLayout
        android:id="@+id/anwser_question"
        android:layout_below="@+id/head_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/answer_img"
                android:layout_margin="10dp"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/want_to_anwser"/>
            <TextView
                android:layout_toRightOf="@+id/answer_img"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我要答题"
                android:textSize="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/save"
        android:layout_below="@+id/head_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/save_img"
            android:layout_margin="10dp"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/save"/>
        <TextView
            android:layout_toRightOf="@+id/save_img"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:textSize="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set"
        android:layout_below="@+id/head_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/set_img"
            android:layout_margin="10dp"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/setting"/>
        <TextView
            android:layout_toRightOf="@+id/set_img"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="16dp"/>
    </RelativeLayout>





</LinearLayout>